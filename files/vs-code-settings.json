{
    "editor.lineHeight": 22,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 11,
    "editor.rulers": [80],
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
    "debug.allowBreakpointsEverywhere": true,
    "terminal.external.osxExec": "iterm.app",
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.lineHeight": 1.5,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.fontAliasing": "antialiased",
    "markdownlint.config": {
        "MD013": false,
        "MD010": {
            "code_blocks": false,
        }
    },
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "right",
    "explorer.openEditors.visible": 0,
    "workbench.settings.editor": "json",
    "files.exclude": {
        "**/.git": false
   },
    "launch": {
        "configurations": [
            {
                "name": "xDebug SO",
                "type": "php",
                "request": "launch",
                "port": 9003,
                "pathMappings": {
                    "/application/www/": "${workspaceRoot}/"
                }
            },
            {
                "name": "xDebug Homestead",
                "type": "php",
                "request": "launch",
                "pathMappings": {
                    "/home/vagrant/code/": "/Users/kindred/Code/laravel/"
                },
                "port": 9000
            },
            {
                "name": "Listen for Xdebug 3.0 (Local)",
                "type": "php",
                "request": "launch",
                "port": 9003,
                "xdebugSettings": {
                    "max_children": 128,
                    "max_data": 1024,
                    "max_depth": 3,
                    "show_hidden": 1
                }
            },
            {
                "name": "Listen for Xdebug (Local)",
                "type": "php",
                "request": "launch",
                "port": 9000,
                "xdebugSettings": {
                    "max_children": 128,
                    "max_data": 1024,
                    "max_depth": 3,
                    "show_hidden": 1
                }
            },
            {
                "name": "XDebug Lando",
                "type": "php",
                "request": "launch",
                "port": 9003,
                "log": false,
                "pathMappings": {
                    "/app/": "${workspaceFolder}/",
                }
            },
            {
                "name": "Launch currently open script",
                "type": "php",
                "request": "launch",
                "program": "${file}",
                "cwd": "${fileDirname}",
                "port": 9000
            }
        ],
        "compounds": []
    },
    "security.workspace.trust.untrustedFiles": "open",
    "intelephense.environment.phpVersion": "8.0",
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
    },
    "intelephense.environment.shortOpenTag": false,
    "intelephense.format.braces": "k&r",
    "editor.renderWhitespace": "none",
    "php.validate.executablePath": "/opt/homebrew/bin/php",
    "json.maxItemsComputed": 15000,
    "intelephense.phpdoc.returnVoid": false,
    "php-docblocker.returnVoid": false,
    "php-docblocker.useShortNames": true,
    "workbench.colorTheme": "Night Owl",
    "editor.minimap.enabled": false,
    "[php]": {
        "editor.defaultFormatter": "valeryanm.vscode-phpsab"
    },
    "redhat.telemetry.enabled": false,
    "phpstan.autoloadFile": "",
    "phpstan.configuration": "",
    "phpstan.level": "config",
    "phpstan.memoryLimit": "-1M",
    "phpstan.noProgress": false,
    "[html]": {
        "editor.defaultFormatter": "mohd-akram.vscode-html-format"
    },
    "intelephense.telemetry.enabled": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "workbench.editor.empty.hint": "hidden",
    "cSpell.enableFiletypes": [
        "md"
    ],
    "cSpell.userWords": [
        "Dokku",
        "Lando",
        "lighthouserc",
        "lndo",
        "Slic"
    ],
    "diffEditor.ignoreTrimWhitespace": false,
}